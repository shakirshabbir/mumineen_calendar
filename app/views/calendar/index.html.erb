<section role="main">
  <div id="year-meta" class="row">
    <div class="small-6 small-centered columns">
      <div class="row collapse">
        <div class="small-10 columns">
          <input type="number" name="year" id="year" value="<%= @year %>" min="<%= CalendarController::MIN_YEAR %>" max="<%= CalendarController::MAX_YEAR %>" step="1" size="4" />
        </div>
        <div class="small-2 columns">
          <span class="postfix">H</span>
        </div>
      </div>
    </div>
  </div>

  <div id="month-meta" class="row collapse">
    <div class="small-2 columns prev"></div>
    <div class="small-8 columns title"><h3></h3></div>
    <div class="small-2 columns next"></div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <table id="days">
        <tbody>
          <tr>
            <td>Sun</td>
            <td>Mon</td>
            <td>Tue</td>
            <td>Wed</td>
            <td>Thu</td>
            <td>Fri</td>
            <td>Sat</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns slider">
      <% @calendar.each_month do |month| %>
        <table data-month="<%= month.name %>" data-year="<%= @year %>" class="month">
          <tbody>
            <% month.each_week do |week| %>
              <tr>
                <% week.each do |day| %>
                  <td class="day<% if day.is_filler? %> filler<% end %>">
                    <span class="h"><%= raw day.hijri_day %></span>
                    <span class="g"><%= raw day.gregorian_day %></span>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</section>
